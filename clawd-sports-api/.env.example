# Sports Data Service Environment Variables

# Service Configuration
NODE_ENV=production
PORT=3003
LOG_LEVEL=info

# Supabase (Self-hosted on sean-ubuntu-vps)
SUPABASE_URL=https://your-supabase-url.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_ANON_KEY=your_anon_key_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# The Odds API
THE_ODDS_API_KEY=your_odds_api_key_here
THE_ODDS_API_URL=https://api.the-odds-api.com/v4

# API Rate Limits
ODDS_API_REQUESTS_PER_DAY=15
ODDS_API_MONTHLY_LIMIT=500

# Circuit Breaker Settings
ESPN_CIRCUIT_THRESHOLD=5
ESPN_CIRCUIT_RESET_TIMEOUT=30000

# Cache TTL (seconds)
CACHE_TTL_SCORES=30
CACHE_TTL_ODDS=300
CACHE_TTL_SCHEDULES=86400
CACHE_TTL_STANDINGS=21600
CACHE_TTL_PLAYERS=604800
CACHE_TTL_NEWS=3600
