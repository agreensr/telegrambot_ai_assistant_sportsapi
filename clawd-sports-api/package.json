{
  "name": "clawd-sports-api",
  "version": "1.0.0",
  "description": "Sports data aggregation service for Clawd Bot",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "node --watch src/server.js",
    "test": "NODE_ENV=test c8 --all --reporter=html --reporter=text node --test tests/**/*.test.js",
    "test:unit": "NODE_ENV=test node --test tests/unit/**/*.test.js",
    "test:integration": "NODE_ENV=test node --test tests/integration/**/*.test.js",
    "test:watch": "NODE_ENV=test node --watch --test tests/**/*.test.js",
    "test:coverage": "NODE_ENV=test c8 --all --reporter=html --reporter=text node --test tests/**/*.test.js",
    "test:ci": "NODE_ENV=test c8 --all --reporter=json --reporter=text node --test tests/**/*.test.js"
  },
  "keywords": ["sports", "api", "espn", "odds"],
  "author": "sean",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "axios": "^1.6.5",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "c8": "^9.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
