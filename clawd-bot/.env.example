# ===========================================
# CLAWD BOT CONFIGURATION
# ===========================================

# Server
NODE_ENV=production
PORT=3000
TZ=America/Chicago

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# OpenRouter API
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_SITE_URL=https://clawd.bot
OPENROUTER_SITE_NAME=Clawd Bot

# Sports Data Service (clawd-sports-api)
SPORTS_API_URL=http://clawd-sports-api:3003
SPORTS_API_TIMEOUT=15000

# Firecrawl (Optional - for general web scraping)
FIRECRAWL_API_URL=http://firecrawl-api:3002
FIRECRAWL_API_KEY=

# Conversation Database (SQLite)
DATABASE_PATH=/app/data/conversations.db

# Logging
LOG_LEVEL=info

# Conversation Settings
MAX_HISTORY_LENGTH=50
CONTEXT_WINDOW_SIZE=10
